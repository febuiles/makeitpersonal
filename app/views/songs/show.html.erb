<% title @song.name %>

<%= render "song_header" %>

<div class="container">
  <div class="row">
    <div class="span6 lyric">
      <%= render "shared/welcome_notice" %>
      <%= render "user_toolbar" %>
      <div id="inline-edit-form" style="display: none">
        <%= render "edit" %>
      </div>
      <p id="song-body">
        <%= @song.body %>
      </p>
    </div>

    <div class="span3 offset1 lower-sidebar">

      <p>
        <%= @song.embed %>
      </p>

      <div class="sidenotes">
        <%= @song.sidenotes %>
        <%= render "love" %>
      </div>
    </div>
  </div>
</div>

<div class="lyric-extra">
  <%= image_tag "cherry-icon.png" %>
  <p>
    Share this song:<br/>
    <input type="text" class="input-share"  value="<%= user_song_url(@user, @song) %>"/>
  </p>

  <%= render "samples" %>
</div>
