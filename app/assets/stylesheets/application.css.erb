@font-face {
    font-family: 'ModernPictogramsNormal';
    src: url(<%= asset_path 'modernpics-webfont.eot' %>);
    src: url(<%= asset_path 'modernpics-webfont.eot?#iefix' %>) format('embedded-opentype'),
         url(<%= 'modernpics-webfont.woff' %>) format('woff'),
         url(<%= 'modernpics-webfont.ttf' %>) format('truetype'),
         url(<%= 'modernpics-webfont.svg#ModernPictogramsNormal' %>) format('svg');
    font-weight: normal;
    font-style: normal;
}


div.wrap {
  min-height: 100%;
}

div.main {
  overflow: auto;
  padding-bottom: 85px;
}

em {
  font-style: italic !important;
}

strong {
  font-weight: bold !important;
}

div#spinner {
  background-color: rgba(197, 197, 197, 0.9);
  width: 60px;
  height: 60px;
  border-radius: 5px;
  text-align: center;
  vertical-align: middle;
  position: fixed;
  background-image: url("/assets/ajax-loader.gif");
  background-repeat: no-repeat;
  background-position: center;
  top: 350px;
  left: 48%;
  display: none;
  z-index: 3;
}

div.overlay {
  width: 100%;
  height: 100%;
  background-color: rgba(197, 197, 197, 0.5);
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 2;
}

div.welcome-notice {
  width: 400px;
  border-left: 10px solid #7fcc41;
  margin-top: 20px;
  margin-bottom: 30px;
  padding-left: 15px;
  clear: both;
}

div.welcome-notice  p {
  color: black !important;
  font-size: 14px !important;
  line-height: 20px !important;
}